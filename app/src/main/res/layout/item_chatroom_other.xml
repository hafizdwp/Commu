<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/item_chatroom_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#ddd" />

    <TextView
        android:id="@+id/item_chatroom_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_item_chatroom_other"
        android:maxWidth="260dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toRightOf="@+id/item_chatroom_iv"
        tools:text="lorem ipsum dolor sitlorem ipsum dolor sit lorem ipsum dolor sit lorem ipsum dolor sit  " />

    <TextView
        android:id="@+id/item_chatroom_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/item_chatroom_tv"
        app:layout_constraintLeft_toRightOf="@id/item_chatroom_tv"
        tools:layout_editor_absoluteY="16dp"
        tools:text="11:40 PM" />

</android.support.constraint.ConstraintLayout>