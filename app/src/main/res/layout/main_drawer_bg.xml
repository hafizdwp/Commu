<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#004197"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/main_drawer_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:civ_border_color="#eeeeee"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="2">

        </com.mikhaellopez.circularimageview.CircularImageView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/relative"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/main_drawer_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Cena"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/main_drawer_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="atusername"
            android:textColor="#fff"/>

    </LinearLayout>


</RelativeLayout>
